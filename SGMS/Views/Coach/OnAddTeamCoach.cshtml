@model SGMS.DTO.CoachContact
@using SGMS.Enums

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .card-header, .head {
        background-color: #5bc1ac;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    .ref {
        background-color: #5bc1ac;
    }
</style>

<form asp-action="OnAddTeamCoach" enctype="multipart/form-data">
    <div class="row mt-3">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-plus me-1 text-white"></i>
                    <span class="text-white">Coach Details <strong class="text-danger">[Verification]</strong></span>
                </div>

                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-5">
                        <input asp-for="CoachId" hidden/>
                        <label asp-for="Title" class="control-label"></label>
                        <select asp-for="Title" class="form-control type" asp-items="Html.GetEnumSelectList<eTitle>()">
                            <option selected="selected" value="">Select User Title</option>
                        </select>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-9">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-9">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-9">
                        <label asp-for="IDNumber" class="control-label"></label>
                        <input asp-for="IDNumber" class="form-control" />
                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-3 mt-2">
                        <label class="control-label"></label>
                      <a class="btn btn-primary" href="@Url.Action("AttachmentDownload","Coach",new {filename = @Model.RSAIDCopy})"><i class="fa fa-download"></i> RSA ID Copy</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-phone me-1 text-white"></i>
                    <span class="text-white">Coach Contact Details <strong class="text-danger">[Verification]</strong></span>
                </div>
                <div class="card-body">
                    <div class="form-group col-md-6">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Alternative" class="control-label"></label>
                        <input asp-for="Alternative" class="form-control" />
                        <span asp-validation-for="Alternative" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-9 mb-5">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="alert alert-danger" role="alert" style="border-bottom-color: darkred;border-bottom-width:3px">
                        Please ensure that all the information provided is of utmost accuracy!
                    </div>
                </div>
            </div>
        </div>
        
    </div>
</form>




@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
