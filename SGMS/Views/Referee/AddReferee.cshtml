@using SGMS.Enums
@model SGMS.DTO.RefereeContact


<head>
  <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

<style>
    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .card-header, .head {
        background-color: #5bc1ac;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    .ref {
        background-color: #5bc1ac;
    }
</style>

<div class="col-xl-12">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-1 text-white"></i>
            <span class="text-white">Referee Registration Information</span>
        </div>

        <div class="card-body">

            <form asp-action="AddReferee" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-user-plus me-1 text-white"></i>
                                <span class="text-white">Referee Biographical Information</span>
                            </div>

                            <div class="card-body">

                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Title" class="control-label"></label>
                                        <select asp-for="Title" class="form-control Title" asp-items="Html.GetEnumSelectList<eTitle>()">
                                            <option selected="selected" value="">Select User Title</option>
                                        </select>
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Name" class="control-label"></label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="LastName" class="control-label"></label>
                                        <input asp-for="LastName" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label asp-for="Gender" class="control-label"></label>
                                        <select asp-for="Gender" class="form-control Gender" asp-items="Html.GetEnumSelectList<eGender>()">
                                            <option selected="selected" value="">Select User Gender</option>
                                        </select>
                                        <span asp-validation-for="Gender" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label asp-for="IDNumber" class="control-label"></label>
                                        <input asp-for="IDNumber" class="form-control" />
                                        <span asp-validation-for="IDNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label asp-for="Photo" class="control-label"></label>
                                        <input asp-for="Photo" class="form-control" type="file" />
                                        <span asp-validation-for="Photo" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-phone me-1 text-white"></i>
                                <span class="text-white">Referee Contact Details</span>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        <label asp-for="Phone" class="control-label"></label>
                                        <input asp-for="Phone" class="form-control" />
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4">
                                        <label asp-for="Alternative" class="control-label"></label>
                                        <input asp-for="Alternative" class="form-control" />
                                        <span asp-validation-for="Alternative" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12">
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="fas fa-info me-1 text-white"></i>
                                <span class="text-white">Referee Details</span>
                            </div>

                            <div class="card-body">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label asp-for="RefereeType" class="control-label"></label>
                                        <select asp-for="RefereeType" class="form-control RefereeType" asp-items="Html.GetEnumSelectList<eRefereeType>()">
                                            <option selected="selected" value="">Select Referee Type</option>
                                        </select>
                                        <span asp-validation-for="RefereeType" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label asp-for="RefereeLevel" class="control-label"></label>
                                        <select asp-for="RefereeLevel" class="form-control RefereeLevel" asp-items="Html.GetEnumSelectList<eRefereeLevel>()">
                                            <option selected="selected" value="">Select Referee Level</option>
                                        </select>
                                        <span asp-validation-for="RefereeLevel" class="text-danger"></span>
                                    </div>

                                     <div class="form-group col-md-3">
                                        <label asp-for="Experience" class="control-label"></label>
                                        <select asp-for="Experience" class="form-control Experience" asp-items="Html.GetEnumSelectList<eLevelofExperience>()">
                                            <option selected="selected" value="">Select Referee Experience</option>
                                        </select>
                                        <span asp-validation-for="Experience" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-3">
                                        <label asp-for="HasJoinedLFA" class="control-label"></label>
                                        <select asp-for="HasJoinedLFA" class="form-control HasJoinedLFA" asp-items="Html.GetEnumSelectList<eYesNo>()">
                                            <option selected="selected" value="">Select Below Option</option>
                                        </select>
                                        <span asp-validation-for="HasJoinedLFA" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-md-12" style="background-color:whitesmoke;">
                        <button type="submit" class="btn btn-success save"><i class="fa fa-save"></i> Save</button>
                        <button type="reset" class="btn btn-outline-warning"><i class="fa fa-undo"></i> Reset</button>
                        <button type="button" class="btn btn-outline-danger float-end"><i class="fa fa-window-close"></i> Exit</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
         $('.Experience,.HasJoinedLFA,.RefereeLevel,.RefereeType,.Title').select2();
    });
</script>





